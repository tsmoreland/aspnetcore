@using BethanysPieShop.MVC.App.Models.Categories;
@model AddViewModel

<h2>Create a new category</h2>
<hr />

<form method="post" asp-asp-controller="Category" asp-action="Add">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" rows="5" cols="50" style="resize: none;"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="DateAdded" class="form-label"></label>
        <input asp-for="DateAdded" class="form-control"/>
    </div>

    <input type="submit" value="Add Category" class="btn btn-primary"/>
</form>

<div>
    <a asp-asp-controller="Category" asp-action="Index">Back to overview</a>
</div>
