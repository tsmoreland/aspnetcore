@{

	var status = Context.Request.Query["status"];
	var approved = "";
	var processing = "";
	var cancelled = "";
	var complete = "";
	var all = "";

	switch(status){
		case "approved":
			approved = "active text-white bg-secondary";
			break;
		case "processing":
			processing = "active text-white bg-secondary";
			break;
		case "cancelled":
			cancelled = "active text-white bg-secondary";
			break;
		case "complete":
			cancelled = "active text-white bg-secondary";
			break;
		default:
			all = "active text-white bg-secondary";
			break;
		}
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3 d-flex justify-content-between">
		<div class="row">
				<h1 class="text-white">Order List</h1>
		</div>
		<ul class="list-group list-group-horizontal-sm pt-2">
			<a style="text-decoration:none" asp-controller="Orders" asp-action="Index" asp-route-status="approved">
				<li class="list-group-item @approved">Approved</li>
			</a>
			<a style="text-decoration:none" asp-controller="Orders" asp-action="Index" asp-route-status="processing">
			<li class="list-group-item @processing">Processing</li>
			</a>
			<a style="text-decoration:none" asp-controller="Orders" asp-action="Index" asp-route-status="cancelled">
			<li class="list-group-item @cancelled">Cancelled</li>
			</a>
			<a style="text-decoration:none" asp-controller="Orders" asp-action="Index" asp-route-status="complete">
			<li class="list-group-item @complete">Complete</li>
			</a>
			<a style="text-decoration:none" asp-controller="Orders" asp-action="Index" asp-route-status="all">
			<li class="list-group-item @all">All</li>
			</a>
		</ul>
	</div>
	<div class="card-body p-4">
		<table id="tblData" class="table table-bordered table-striped pt-3" style="width:100%">
			<thead>
				<tr>
					<th>ID</th>
					<th>Status</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts{
	<script src="~/js/order.js"></script>
}
