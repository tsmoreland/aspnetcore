{
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "InstrumentationKey": "<your-instrumentation-key>"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default":  "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": {
      "Name": "ByExcluding",
      "Args": {
        "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/logs.txt",
          "rollingInterval": "Day"
        }
      }
    ]
}
