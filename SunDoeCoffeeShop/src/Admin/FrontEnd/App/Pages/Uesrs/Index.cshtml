@page
@model SunDoeCoffeeShop.Admin.FrontEnd.App.Pages.Uesrs.IndexModel

<h3>Users</h3>

@if (Model.Users is null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.UserNameSort">
                    @Html.DisplayFor(m => m.Users![0].UserName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.EmailSort">
                    @Html.DisplayFor(m => m.Users![0].Email)
                </a>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

}

