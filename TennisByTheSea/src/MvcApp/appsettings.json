{
  "AllowedHosts": "*",
  "Features": {
    "WeatherForecasting": {
      "Enable": true
    }
  },
  "ExternalServices": {
    "WeatherApi": {
      "Url": "http://localhost:9001",
      "CachePeriod": "00:10:00"
    },
    "ProductsApi": {
      "Url": "http://localhost:9002",
      "MinsToCache": 1
    },
    "StatisticsApi": {
      "Url": "http://localhost:9003"
    },
    "TennisPlayersApi": {
      "Url": "http://localhost:9004"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default":  "Error",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": {
      "Name": "ByExcluding",
      "Args": {
        "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/logs.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
