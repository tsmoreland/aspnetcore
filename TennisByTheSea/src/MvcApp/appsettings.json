{
  "AllowedHosts": "*",
  "Features": {
    "WeatherForecasting": {
      "Enable": true
    },
    "HomePage": {
      "EnableGreeting": true,
      "EnableWeatherForecast": true,
      "ForecastSectionTitle": "What's the weather doing?"
    },
    "Greeting": {
      "GreetingColour": "#0000FF"
    }
  },
  "ExternalServices": {
    "WeatherApi": {
      "Url": "http://localhost:9001",
      "CachePeriod": "00:10:00"
    },
    "ProductsApi": {
      "Url": "http://localhost:9002",
      "MinsToCache": 1
    },
    "StatisticsApi": {
      "Url": "http://localhost:9003"
    },
    "TennisPlayersApi": {
      "Url": "http://localhost:9004"
    }
  },
  "Membership": {
    "MonthlyMembershipFullPrice": 25
  },

  "ClubSettings": {
    "PeakStartHour": 16,
    "PeakEndHour": 20,
    "OpenHour": 7,
    "CloseHour": 22,
    "WinterCourtStartHour": 9,
    "WinterCourtEndHour": 15,
    "WinterMonths": [ 1, 2, 3, 10, 11, 12 ]
  },

  "CourtBookings": {
    "MaxRegularBookingLengthInHours": 3,
    "MaxPeakBookingLengthInHours": 2
  },

  "Content": {
    "CheckForProfanity": true
  },

  "Greeting": {
    "Colour": "black",
    "Greetings": [
      "Hi, let's play some tennis!",
      "Welcome to the sunniest tennis club in the south!",
      "Welcome to Tennis by the sea!",
      "We are the friendliest club in the south!"
    ],
    "LoginGreetings": [
      "Welcome back {name}!",
      "Good to see you again {name}!",
      "Hi {name}! Ready for some tennis?",
      "It's ace to see you {name}!"
    ]
  },
  "HomePage": {
	"EnableGreeting": true, 
	"EnableWeatherForecast": true,
	"ForecastSectionTitle": "What's the weather doing?"
  },
  "ScoreProcessing": {
    "FolderPath": "./logs/scores"
  },

  "WeatherForecasting": {
    "Enable": true 
  },
  "Serilog": {
    "MinimumLevel": {
      "Default":  "Error",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": {
      "Name": "ByExcluding",
      "Args": {
        "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/logs.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
